<?xml version="1.0" encoding="UTF-8"?>
<solver>

    <solutionClass>org.opta.groupScheduler.domain.GroupScheduleSolution</solutionClass>
    <entityClass>org.opta.groupScheduler.domain.GroupPerCourse</entityClass>
    <entityClass>org.opta.groupScheduler.domain.LessonAssignment</entityClass>

    <scoreDirectorFactory>
        <constraintProviderClass>org.opta.groupScheduler.solver.LessonAssignmentConstraintProvider</constraintProviderClass>
    </scoreDirectorFactory>

    <termination>
        <secondsSpentLimit>120</secondsSpentLimit>
    </termination>

    <constructionHeuristic>
        <!--<constructionHeuristicType>FIRST_FIT</constructionHeuristicType>-->
        <queuedEntityPlacer>
            <entitySelector id="placerEntitySelectorGroup">
                <entityClass>org.opta.groupScheduler.domain.GroupPerCourse</entityClass>
            </entitySelector>
            <changeMoveSelector>
                <entitySelector mimicSelectorRef="placerEntitySelectorGroup"/>
            </changeMoveSelector>
        </queuedEntityPlacer>
    </constructionHeuristic>

    <constructionHeuristic>
        <queuedEntityPlacer>
            <entitySelector id="placerEntitySelectorLA">
                <entityClass>org.opta.groupScheduler.domain.LessonAssignment</entityClass>
                <cacheType>PHASE</cacheType>
                <selectionOrder>SORTED</selectionOrder>
                <sorterManner>DECREASING_DIFFICULTY</sorterManner>
            </entitySelector>
            <unionMoveSelector>
                <changeMoveSelector>
                    <entitySelector mimicSelectorRef="placerEntitySelectorLA"/>
                </changeMoveSelector>
            </unionMoveSelector>
        </queuedEntityPlacer>
    </constructionHeuristic>

    <localSearch>
        <localSearchType>LATE_ACCEPTANCE</localSearchType>
    </localSearch>
</solver>
<?xml version="1.0" encoding="UTF-8"?>
<solver>
    <warmUpSecondsSpentLimit>10</warmUpSecondsSpentLimit>

    <solutionClass>org.opta.groupScheduler.domain.FixedTaskLessonSolution</solutionClass>
    <entityClass>org.opta.groupScheduler.domain.FixedTaskLesson</entityClass>

    <scoreDirectorFactory>
        <constraintProviderClass>org.opta.groupScheduler.solver.FixedTaskLessonConstraintProvider</constraintProviderClass>
    </scoreDirectorFactory>

    <termination>
        <secondsSpentLimit>480</secondsSpentLimit>
    </termination>

    <constructionHeuristic>
        <constructionHeuristicType>FIRST_FIT_DECREASING</constructionHeuristicType>
    </constructionHeuristic>


    <localSearch>
        <acceptor>
            <valueTabuSize>5</valueTabuSize>
            <stepCountingHillClimbingSize>350</stepCountingHillClimbingSize>
        </acceptor>
        <forager>
            <acceptedCountLimit>1</acceptedCountLimit>
        </forager>
    </localSearch>
